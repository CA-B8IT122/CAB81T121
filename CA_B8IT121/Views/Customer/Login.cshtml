@model CA_B8IT121.Models.Customer
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link href="~/Content/custstyle.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <title>Customer Login</title>
</head>
<body>

    <h2 class="heading">Welcome to our customer login</h2>

    <div class="container">
        
        <div class="lhs">

            <h3 class="heading">Registered Customers</h3>
            <h4 class="heading">If you have an account with us already, please log in here</h4>
            @using (Html.BeginForm("Login", "Customer", FormMethod.Post))
            {
                <p>

                    @Html.LabelFor(c => c.Email):
                    @Html.TextBoxFor(c => c.Email)
                    @Html.ValidationMessageFor(c => c.Email, "", new { @class = "error" })

                </p>
                <p>

                    @Html.LabelFor(c => c.Password):
                    @Html.TextBoxFor(c => c.Password)
                    @Html.ValidationMessageFor(c => c.Email, "", new { @class = "error" })

                </p>
                @*<div class="form-group">
                    @Html.LabelFor(model => model.CustType, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <span>
                            <label>Customer</label>
                            @Html.RadioButtonFor(model => model.CustType, "Customer", new { htmlAttributes = new { @class = "form-control" } })
                            <label> Administrator</label>
                            @Html.RadioButtonFor(model => model.CustType, "Administrator", new { htmlAttributes = new { @class = "form-control" } })

                            @Html.ValidationMessageFor(model => model.CustType, "", new { @class = "text-danger" })
                        </span>

                    </div>
                </div>*@

                <input type="submit" value="Login" />
            }
        </div>

            <div class="rhs">

                <h3 class="heading">New Customer Registration</h3>
                <p>
                    <h4 class="heading"> All new customers, please register here</h4>

                </p>
                <p>
                    <button class="btn" onclick="location.href='@Url.Action("AddCustomer", "Customer")'">Add a New Customer</button>
                </p>


            </div>

        </div>
    
</body>
</html>
