<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link href="~/Content/StyleSheet1.css" rel="stylesheet" />
    <link href="~/Content/Style_Temp1.css" rel="stylesheet" />
</head>
<body>
    <div id="wrapper">
        <header>
            <img src="~/Content/images/logo.gif" alt="logo" class="right" />
            <h1>Welcome to Maria's WineShop.com</h1>

        </header>
        <nav>
            <ul>
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Books", "Index", "Book")</li>
                <li>@Html.ActionLink("Courses", "Index", "Course")</li>
                <li>
                    @Html.ActionLink("Quizzes", "Index", "Quiz")
                    <ul>
                        <li>@Html.ActionLink("C# Quiz", "CSharpQuiz", "Quiz")</li>
                        <li>@Html.ActionLink("ASP.Net Quiz", "ASPQuiz", "Quiz")</li>
                        <li>@Html.ActionLink("Java Quiz", "JavaQuiz", "Quiz")</li>
                    </ul>

                </li>


                <li>@Html.ActionLink("About Us", "Index", "About")</li>
                <li>@Html.ActionLink("Contact Us", "Index", "Contact")</li>
            </ul>

        </nav>
        <main>
            @RenderBody()

        </main>
        <footer>
            <p>&copy; @DateTime.Now.Year - Dublin Business School</p>
        </footer>
    </div>
</body>
</html>
